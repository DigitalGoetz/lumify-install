<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <value><%= @yarn_nodemanager_resource_memory %></value>
  </property>

  <property>
    <name>yarn.nodemanager.resource.cpu-vcores</name>
    <value><%= @yarn_max_vcores %></value>
  </property>

  <property>
    <name>yarn.resourcemanager.hostname</name>
    <value><%= @yarn_resourcemanager_hostname %></value>
  </property>

  <property>
    <name>yarn.nodemanager.local-dirs</name>
    <value><%= (@data_directories || '').map{|d| d + '/yarn/local'}.join(',') %></value>
  </property>

  <property>
    <name>yarn.nodemanager.log-dirs</name>
    <value><%= (@data_directories || '').map{|d| d + '/yarn/logs'}.join(',') %></value>
  </property>

  <property>
    <name>yarn.log-aggregation-enable</name>
    <value>true</value>
  </property>

  <property>
    <name>yarn.nodemanager.address</name>
    <value>${yarn.nodemanager.hostname}:48314</value>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.job.client.port-range</name>
    <value>50100-50200</value>
  </property>

  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </property>

  <property>
    <name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
    <value>org.apache.hadoop.mapred.ShuffleHandler</value>
  </property>

  <property>
      <name>yarn.scheduler.minimum-allocation-vcores</name>
      <value><%= @yarn_resourcemanager_min_vcores %></value>
  </property>

  <property>
        <name>yarn.scheduler.maximum-allocation-vcores</name>
        <value><%= @yarn_resourcemanager_max_vcores %></value>
  </property>

  <property>
          <name>yarn.scheduler.increment-allocation-vcores</name>
          <value><%= @yarn_resourcemanager_incr_vcores %></value>
  </property>

  <property>
          <name>yarn.scheduler.minimum-allocation-mb</name>
          <value><%= @yarn_resourcemanager_min_memory %></value>
  </property>

  <property>
          <name>yarn.scheduler.maximum-allocation-mb</name>
          <value><%= @yarn_resourcemanager_max_memory %></value>
  </property>

  <property>
          <name>yarn.scheduler.increment-allocation-mb</name>
          <value><%= @yarn_resourcemanager_incr_memory %></value>
  </property>



  <property>
            <name>yarn.app.mapreduce.am.resource.mb</name>
            <value><%= @yarn_mapreduce_am_memory %></value>
  </property>

  <property>
          <name>yarn.app.mapreduce.am.command-opts</name>
          <value><%= @yarn_mapreduce_am_commandopts %></value>
  </property>

  <property>
          <name>yarn.app.mapreduce.am.resource.cpu-vcores</name>
          <value><%= @yarn_mapreduce_am_vcores %></value>
  </property>

</configuration>
