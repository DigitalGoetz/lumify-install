#!/usr/bin/expect -f

set instance_name [lindex $argv 0]
set password [lindex $argv 1]

spawn /usr/bin/sudo -u <%= @user %> <%= @bin_dir %>/accumulo init

expect "Instance Name :"
send "$instance_name\r"
expect "Enter initial password for root (this may not be applicable for your security setup):"
send "$password\r"
expect "Confirm initial password for root:"
send "$password\r"
